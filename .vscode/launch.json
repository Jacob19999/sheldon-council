{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Backend Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "backend.main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DEBUG": "true",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Backend (No Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "backend.main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}

